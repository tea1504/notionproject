          .col-10
            #boxLaBoThu
                span.badge.rounded-pill.text-bg-success.mx-1(data-id="test" data-name="test") test
        .row.mt-1
          label.col-2.col-form-label Có bộ thủ
          .col-10
            input.form-control.form-control-sm#txtCoBoThu(type="text" name="txtCoBoThu")
        .row.mt-1
          .col-10.offset-2
            #boxCoBoThu
